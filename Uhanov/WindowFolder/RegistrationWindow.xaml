<Window x:Class="LibraryBook.WindowFolder.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryBook.WindowFolder"
        mc:Ignorable="d"
        Title="Регистрация"
        Height="470" Width="400"
        MinHeight="470" MinWidth="400"
        MaxHeight="470" MaxWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#d1eeea">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Image Style="{DynamicResource LogoImage}"
               Grid.Column="1" Grid.Row="1"
               Width="170" Height="100" Margin="0"/>

        <Label Content="Регистрация" Grid.Row="1" Grid.Column="2"
               Style="{DynamicResource LogoLabel}"/>

        <Label Content="Логин" Grid.Row="3" Grid.Column="1"
               Style="{DynamicResource NormalLabel}"
               HorizontalAlignment="Center"/>
        <TextBox x:Name="LoginTb" Grid.Row="3" Grid.Column="2" Width="auto"/>

        <Label Content="Пароль" Grid.Row="5" Grid.Column="1"
               Style="{DynamicResource NormalLabel}"
               HorizontalAlignment="Center"/>
        <PasswordBox x:Name="PasswordPsb" Grid.Row="5" Grid.Column="2"/>

        <Label Content="Повторите пароль" Grid.Row="7" Grid.Column="1"
               Style="{DynamicResource NormalLabel}"/>
        <PasswordBox x:Name="RepeatPasswordPsb" Grid.Row="7" Grid.Column="2"/>

        <Button Content="Зарегистрироваться" Grid.Row="9" Grid.Column="2"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                x:Name="RegBtn" Click="RegBtn_Click"/>
        <Button Content="Выйти" Grid.Row="9" Grid.Column="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                x:Name="ExitBtn" Click="ExitBtn_Click"/>
        
        </Grid>
</Window>
